{
  "name": "Angular 13 Host Web",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:16",  // Node 16 is recommended for Angular 13
  "features": {
    "ghcr.io/devcontainers/features/node:latest": {
      "version": "16"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:latest": {},
    "ghcr.io/devcontainers/features/azure-cli:latest": {},
    "ghcr.io/devcontainers/features/aws-cli:latest": {},
    "ghcr.io/devcontainers/features/git:latest": {},
    "ghcr.io/devcontainers/features/powershell:1": {}
  },
  "forwardPorts": [
    4216
  ],
  "postCreateCommand": "npm install -g @angular/cli@13 && sudo apt-get update && sudo apt-get install -y iputils-ping",
  "customizations": {
    "vscode": {
      "extensions": [
        "angular.angular-language-service",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-typescript"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
